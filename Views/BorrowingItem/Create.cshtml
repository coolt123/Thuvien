@model ThuvienMvc.Models.BorrowingItems

<h1>Create Borrowing Item</h1>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="IdBor"></label>
        <select asp-for="IdBor" class="form-control" asp-items="ViewBag.BorrowingId"></select>
    </div>
    <div class="form-group">
        <label asp-for="IdBook"></label>
        <select asp-for="IdBook" class="form-control" asp-items="ViewBag.BookId"></select>
    </div>
    <div class="form-group">
        <label asp-for="Quantity"></label>
        <input asp-for="Quantity" class="form-control" />
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>

