@model ThuvienMvc.Models.Book

<h1>@Model.Title</h1>
<img src="@Model.Image" alt="@Model.Title" style="max-width: 300px; object-fit: cover;" />
<p><strong>Phụ đề:</strong> @Model.SubTitle</p>
<p><strong>Mô tả:</strong> @Model.Description</p>
<p><strong>Tác giả:</strong> @Model.Author?.NameAuthor</p>
<p><strong>Thể loại:</strong> @Model.Genre?.NameGenres</p>
<p><strong>Năm xuất bản:</strong> @Model.PublishingYear</p>
<p><strong>Số lượng còn lại:</strong> @Model.QuantityInStock</p>

<h3>Đánh giá:</h3>
@if (Model.Rating != null && Model.Rating.Any())
{
    foreach (var rating in Model.Rating)
    {
        <div style="margin-bottom: 15px;">
            <strong>@rating.User?.UserName</strong>:
            @{
                for (int i = 1; i <= 5; i++)
                {
                    if (i <= rating.Star)
                    {
                        <span style="font-family: Arial, sans-serif; font-size: 20px;">&#9733;</span> 
                        
                    }
                    else
                    {
                        <span style="font-family: Arial, sans-serif; font-size: 20px;">&#9734;</span> 
                    }
                }
            }
        </div>
    }
}
else
{
    <p>Chưa có đánh giá nào cho quyển sách này.</p>
}

<a href="@Url.Action("Index", "Book")" class="btn btn-primary">Quay lại danh sách sách</a>

